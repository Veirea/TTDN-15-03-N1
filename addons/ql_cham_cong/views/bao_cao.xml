<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Menu & Action -->
    <record id="action_bao_cao" model="ir.actions.act_window">
        <field name="name">Báo Cáo Chấm Công</field>
        <field name="res_model">bao_cao</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View for Bao Cao -->
    <record id="view_bao_cao_tree" model="ir.ui.view">
        <field name="name">bao.cao.tree</field>
        <field name="model">bao_cao</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nam"/>
                <field name="thang"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Bao Cao -->
    <record id="view_bao_cao_form" model="ir.ui.view">
        <field name="name">bao.cao.form</field>
        <field name="model">bao_cao</field>
        <field name="arch" type="xml">
            <form string="Báo Cáo Chấm Công">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="nam"/>
                        <field name="thang"/>
                    </group>
                    <notebook>
                        <page string="Danh Sách Nhân Viên">
                            <field name="nhan_vien_ids">
                                <tree editable="bottom">
                                    <field name="nhan_vien_id"/>
                                    <field name="tong_so_ca"/>
                                    <field name="tong_ngay_nghi"/>
                                    <field name="so_don_nghi_phep"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Bao Cao Line -->
    <record id="view_bao_cao_line_tree" model="ir.ui.view">
        <field name="name">bao.cao.line.tree</field>
        <field name="model">bao_cao_line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nhan_vien_id"/>
                <field name="tong_so_ca"/>
                <field name="tong_ngay_nghi"/>
                <field name="so_don_nghi_phep"/>
            </tree>
        </field>
    </record>
</odoo>
